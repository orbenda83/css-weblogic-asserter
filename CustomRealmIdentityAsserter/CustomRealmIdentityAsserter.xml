<?xml version="1.0" ?>
<!DOCTYPE MBeanType SYSTEM "commo.dtd">
<MBeanType
    Name="CustomRealmIdentityAsserter"
    DisplayName="CustomRealmIdentityAsserter"
    Package="com.oracle.il.css"
    Extends="weblogic.management.security.authentication.IdentityAsserter"
    Description="A custom identity asserter to validate users from a request header."
>
    <!-- The implementation class for the provider's logic -->
    <MBeanAttribute
        Name="ProviderClassName"
        Type="java.lang.String"
        Writeable="false"
        Default="&quot;com.oracle.il.css.CustomRealmIdentityAsserterProviderImpl&quot;"
    />

    <!-- The user-visible description of the provider instance -->
    <MBeanAttribute
        Name="Description"
        Type="java.lang.String"
        Writeable="false"
        Default="&quot;WebLogic Custom Realm Identity Asserter Provider&quot;"
    />

    <!-- The version of the provider -->
    <MBeanAttribute
        Name="Version"
        Type="java.lang.String"
        Writeable="false"
        Default="&quot;1.0.0&quot;"
    />

    <MBeanAttribute  
     Name         = "SupportedTypes"
     Type         = "java.lang.String[]"
     Writeable     = "false"
     Default     = "new String[] { &quot;HttpServletRequest&quot;, &quot;OAS_USER&quot;, &quot;GET&quot;, &quot;Content-Type&quot;, &quot;Accept&quot;, &quot;POST&quot;, &quot;Host&quot;, &quot;Location&quot;, &quot;Cookie&quot;, &quot;Set-Cookie&quot;  }"
     />
     
     <MBeanAttribute  
     Name         = "ActiveTypes"
     Type         = "java.lang.String[]"
     Default     = "new String[] { &quot;HttpServletRequest&quot;, &quot;OAS_USER&quot;, &quot;GET&quot;, &quot;POST&quot;, &quot;Cookie&quot;, &quot;Set-Cookie&quot; }"
     />

     <MBeanAttribute
     Name         = "Base64DecodingRequired"
     Type         = "boolean"
     Writeable    = "false"
     Default      = "false"
     Description  = "See MyIdentityAsserter-doc.xml."
     />

    <!-- The name of the HTTP header to check for the username -->
    <MBeanAttribute
        Name="HeaderName"
        Type="java.lang.String"
        Default="&quot;OAS_USER&quot;"
        Description="The name of the HTTP header that contains the user ID."
    />
    
    <!-- Flag to enable/disable debugging -->
    <MBeanAttribute
        Name="DebugEnabled"
        Type="java.lang.Boolean"
        Default="false"
        Description="A flag to enable or disable debug logging for the provider."
    />
</MBeanType>